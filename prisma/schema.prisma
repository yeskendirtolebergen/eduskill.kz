generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  role      String   @default("STUDENT") // ADMIN, TEACHER, STUDENT
  schoolId  String?
  school    School?  @relation(fields: [schoolId], references: [id])
  createdAt DateTime @default(now())
  
  // Relations
  createdTopics    Topic[]          @relation("CreatedTopics")
  examResults      ExamResult[]
  examSessions     ExamSession[]
}

model School {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  
  users     User[]
}

model Topic {
  id          String   @id @default(cuid())
  title       String
  description String?
  passScore   Int      @default(70)
  order       Int      @default(0)
  authorId    String
  author      User     @relation("CreatedTopics", fields: [authorId], references: [id])
  createdAt   DateTime @default(now())

  questions   Question[]
  examResults ExamResult[]
  examSessions ExamSession[]
}

model Question {
  id            String   @id @default(cuid())
  text          String
  type          String   @default("TEST") // TEST, MANUAL
  difficulty    String   @default("EASY") // EASY, MEDIUM, HARD
  options       String?  // JSON string for options ["A", "B", ...]
  correctAnswer String
  topicId       String
  topic         Topic    @relation(fields: [topicId], references: [id], onDelete: Cascade)
}

model ExamResult {
  id        String   @id @default(cuid())
  score     Int
  status    String   // PASSED, FAILED
  details   String?  // JSON string of answer log
  studentId String
  student   User     @relation(fields: [studentId], references: [id])
  topicId   String
  topic     Topic    @relation(fields: [topicId], references: [id])
  createdAt DateTime @default(now())
}

model ExamSession {
  id        String   @id @default(cuid())
  studentId String
  topicId   String
  student   User     @relation(fields: [studentId], references: [id])
  topic     Topic    @relation(fields: [topicId], references: [id])
  
  score     Int      @default(0)
  difficulty String  @default("EASY") // Current difficulty
  status    String   @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED, ABANDONED
  
  answeredQuestions String? // JSON array of question IDs already answered to avoid repeats
  
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
